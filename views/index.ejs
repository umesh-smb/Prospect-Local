<% include layout %>

<div class="container">
		<div class="row" align="center">
			<h3><%=title%></h3>
		</div>
		<div id="messageContainer" class="row">
			<div class="col-lg-5 item-block">
				<h4>Send Message</h4>
				<div class="col-lg-12">
					<form id="frmSendMessage">
						<div class="form-group">
							<textarea id="message" rows="5" class="form-control" placeholder="Type your message."></textarea>
						</div>
						<div class="form-group">
							<input type="submit" class="btn btn-primary" value="SEND"/>
						</div>
					</form>
				</div>
			</div>
			<div class="col-lg-5 item-block">
				<h4>Receive Message</h4>
				<div id="receiveMessage" class="col-lg-8">						
				</div>
			</div>
		</div>
		<div class="row">
		</div>
	</div>
	
<% include footer %>